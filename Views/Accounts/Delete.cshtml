@model BankingManagementSystem.Models.Account

@{
    ViewBag.Title = "Delete Account";
}

<div class="container">
    <h2>Delete Account</h2>
    <hr />

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this account?</h4>
    </div>

    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">Account to be Deleted</h3>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.AccountNumber)</dt>
                <dd>@Html.DisplayFor(model => model.AccountNumber)</dd>

                <dt>@Html.DisplayNameFor(model => model.AccountHolderName)</dt>
                <dd>@Html.DisplayFor(model => model.AccountHolderName)</dd>

                <dt>@Html.DisplayNameFor(model => model.Email)</dt>
                <dd>@Html.DisplayFor(model => model.Email)</dd>

                <dt>@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                <dd>@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt>@Html.DisplayNameFor(model => model.AccountType)</dt>
                <dd>@Html.DisplayFor(model => model.AccountType)</dd>

                <dt>@Html.DisplayNameFor(model => model.Balance)</dt>
                <dd>@Html.DisplayFor(model => model.Balance)</dd>

                <dt>@Html.DisplayNameFor(model => model.DateOpened)</dt>
                <dd>@Html.DisplayFor(model => model.DateOpened)</dd>

                <dt>@Html.DisplayNameFor(model => model.IsActive)</dt>
                <dd>
                    @if (Model.IsActive)
                    {
                        <span class="label label-success">Active</span>
                    }
                    else
                    {
                        <span class="label label-danger">Inactive</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AccountId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
