@model BankingManagementSystem.Models.Account

@{
    ViewData["Title"] = "Account Details";
}

<div class="container mt-4">
    <h2>Account Details</h2>
    <hr />

    <div class="card">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Account Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AccountNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AccountNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AccountHolderName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AccountHolderName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AccountType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AccountType)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Balance)</dt>
                <dd class="col-sm-9">
                    <strong class="text-success fs-5">@Html.DisplayFor(model => model.Balance)</strong>
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DateOpened)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DateOpened)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsActive)</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.AccountId" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.AccountId" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>